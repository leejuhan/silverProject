<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름을 써주세요!"
        android:textStyle="bold"
        android:textColor="#08adfa"
        android:textSize="18dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디를 써주세요!"
        android:textStyle="bold"
        android:textColor="#08adfa"
        android:textSize="18dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUserName"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 써주세요!"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="18dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/editTextPassword"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드폰번호를 써주세요!"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textColor="#010000"
        android:id="@+id/editTextEmail" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="회원등록하기"
        android:id="@+id/buttonRegister"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#5b8bc5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="회원이시면 로그인해요!" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="회원이시면 로그인해요!"
        android:id="@+id/buttonLogin"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#5c8ac1" />

</LinearLayout>