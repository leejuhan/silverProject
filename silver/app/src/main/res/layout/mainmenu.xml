<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainmenu"
    android:background="#ffffff">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="댄스교실"
        android:id="@+id/dancesports"
        android:textSize="23dp"
        android:visibility="visible"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:textColor="@color/textcolorAccent" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="컴퓨터교실"
        android:id="@+id/computerschool"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_below="@+id/dancesports"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/border_input"
        android:textColor="@color/textcolorAccent" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="자유게시판"
        android:id="@+id/free"
        android:background="#787676"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@+id/computerschool"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="노래교실"
        android:id="@+id/musicshool"
        android:background="@drawable/border_input"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/gateball"
        android:textColor="@color/textcolorAccent" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="게이트볼"
        android:id="@+id/gateball"
        android:background="@drawable/border_input"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_toRightOf="@+id/musicshool"
        android:layout_toEndOf="@+id/musicshool"
        android:textColor="@color/textcolorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignBottom="@+id/computerschool"
        android:layout_toLeftOf="@+id/dancesports"
        android:layout_toStartOf="@+id/dancesports">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/mainframe" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/musicshool"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/qna"
            android:layout_alignBottom="@+id/qna">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                android:adjustViewBounds="true"
                android:maxHeight="50dp"
                android:layout_marginRight="85dp"
                android:layout_marginEnd="85dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="실버시장"
            android:id="@+id/qna"
            android:textSize="25dp"
            android:textStyle="bold"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#050000"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
